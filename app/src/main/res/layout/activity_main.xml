<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1A1C5"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    android:weightSum="3">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FEF6DF"
        android:text="@string/title_kanade_tachibana" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F4F7FF"
        android:contentDescription="@string/best_character_ever"
        app:srcCompat="@drawable/kanade_face_portrait" />
</LinearLayout>